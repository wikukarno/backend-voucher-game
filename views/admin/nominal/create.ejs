<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah nominal</h3>
            </div>
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="coinName">Pilih koin</label>
                  <select class="form-control select2" id="coinName" name="coinName" required>
                    <option value="">Pilih koin</option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah koin</label>
                  <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" placeholder="Masukkan jumlah koin" required>
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input type="number" class="form-control" id="price" name="price" placeholder="Masukkan harga" required>
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

